Name:                   language-java
Version:                0.2.5.1
License:                BSD3
License-File:           LICENSE
Author:                 Niklas Broberg
Maintainer:             James Koppel <darmanithird@gmail.com>
Category:               Language
Synopsis:               Manipulating Java source: abstract syntax, lexer, parser, and pretty-printer
Description:            Java source manipulation.
Homepage:               http://github.com/jkoppel/language-java
Stability:              Experimental
Build-Type:             Simple
Cabal-Version:          >= 1.8

Extra-Source-Files:
    tests/java/good/*.java
    tests/java/bad/*.java
    Language/Java/Lexer.x

source-repository head
  type:                 git
  location:             git://github.com/jkoppel/language-java

Library
  Build-Tools:          alex >= 2.3
  Build-Depends:        base >= 4 && < 5
                      , array >= 0.1
                      , pretty >= 1.0
                      , cpphs >= 1.3
                      , parsec >= 3.0

  if impl(ghc < 7.6)
    Build-Depends:      syb

  Exposed-modules:      Language.Java.Lexer,
                        Language.Java.Syntax,
                        Language.Java.Parser,
                        Language.Java.Pretty
  
  Other-modules:	

Test-Suite test-java-parse
  type:              exitcode-stdio-1.0
  hs-source-dirs:    tests
  Main-is:           Tests.hs
  Build-Depends:     base >= 3 && < 5
                   , mtl
                   , QuickCheck >= 2
                   , HUnit
                   , test-framework
                   , test-framework-quickcheck2
                   , test-framework-hunit
                   , language-java
                   , filepath
                   , directory
  ghc-options:       -Wall -fno-warn-orphans -fno-warn-missing-signatures
